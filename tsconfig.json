{
  "files": [],
  "references": [
    { "path": "apps/client" },
    { "path": "apps/server" }
  ],
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/client/src/*"],
      "@shared/*": ["packages/shared/*"]
    }
  }
}
